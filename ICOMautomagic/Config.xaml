        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="152,146,0,0" VerticalAlignment="Top" Width="75" Click="CancelButton_Click"/>
        <CheckBox x:Name="onTopCheckbox" Content="Always on top" HorizontalAlignment="Left" Margin="31,151,0,0" VerticalAlignment="Top"/>

