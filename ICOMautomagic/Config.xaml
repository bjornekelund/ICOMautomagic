        <ComboBox x:Name="ComPortSpeedCombobox" HorizontalAlignment="Left" Margin="253,101,0,0" VerticalAlignment="Top" Width="70"/>
        <Label Content="Speed" HorizontalAlignment="Left" Margin="250,78,0,0" VerticalAlignment="Top"/>
        <Label Content="COM port" HorizontalAlignment="Left" Margin="156,78,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comPortCombobox" HorizontalAlignment="Left" Margin="160,101,0,0" VerticalAlignment="Top" Width="70"/>
